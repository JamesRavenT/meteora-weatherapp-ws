<Window x:Class="Meteora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Height="350" Width="400">

    <Grid Margin="20">
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
            <RowDefinition Height="*"/>
            <!-- Results -->
        </Grid.RowDefinitions>

        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- City Label -->
        <TextBlock Text="City:" 
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>

        <!-- City TextBox -->
        <TextBox x:Name="txtCity" 
                 Width="200" Height="30"
                 Grid.Row="0" Grid.Column="1"/>

        <!-- Get Weather Button -->
        <Button x:Name="btnGetWeather" 
                Content="Get Weather" 
                Width="120" Height="35" 
                Margin="0,10,0,20"
                Grid.Row="1" Grid.Column="1" 
                HorizontalAlignment="Left"
                Click="btnGetWeather_Click"/>

        <!-- Results Section -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock x:Name="lblCityName" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock x:Name="lblTemperature" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="lblCondition" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="lblHumidity" FontSize="14" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
